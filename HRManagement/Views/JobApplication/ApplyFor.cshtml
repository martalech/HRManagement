@model JobApplication
@{
    ViewBag.Title = "Apply";
}
<div class="row">
    <div class="col-sm-12">
        <h2>Edit Job Offer</h2>
        @using (Html.BeginForm("Create"))
        {
            <p>Applyfor: @Model.OfferId</p>
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName)
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName)
                @Html.TextAreaFor(m => m.LastName, new { @class = "form-control", placeholder = "Enter description" })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber)
                @Html.TextAreaFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Enter company name" })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ContactAgreement)
                @Html.TextAreaFor(m => m.ContactAgreement, new { @class = "form-control", placeholder = "Enter contract type" })
                @Html.ValidationMessageFor(m => m.ContactAgreement, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CvUrl)
                @Html.TextAreaFor(m => m.CvUrl, new { @class = "form-control", placeholder = "Enter salary" })
                @Html.ValidationMessageFor(m => m.CvUrl, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EmailAddress)
                @Html.TextAreaFor(m => m.EmailAddress, new { @class = "form-control", placeholder = "Enter salary" })
                @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>
</div>